# Security Configuration

# Admin IP Whitelist (comma-separated, supports CIDR notation)
# Example: 203.0.113.1,198.51.100.0/24
ADMIN_IP_WHITELIST=

# CAPTCHA Settings
CAPTCHA_ENABLED=true
CAPTCHA_THRESHOLD=3
CAPTCHA_PROVIDER=recaptcha

# Google reCAPTCHA v3
RECAPTCHA_SITE_KEY=your_site_key_here
RECAPTCHA_SECRET_KEY=your_secret_key_here

# HaveIBeenPwned Integration
HIBP_ENABLED=true

# MFA Configuration
MFA_ADMIN_REQUIRED=true
MFA_USER_OPTIONAL=true

# Geo-Blocking
GEO_BLOCKING_ENABLED=true

# Rate Limiting
AUTH_RATE_LIMIT=5
AUTH_RATE_DECAY=15
FINANCIAL_RATE_LIMIT=10
FINANCIAL_RATE_DECAY=1

# Auto-Scaling (Kubernetes)
K8S_MIN_REPLICAS=3
K8S_MAX_REPLICAS=20
K8S_CPU_THRESHOLD=70
K8S_MEMORY_THRESHOLD=80
