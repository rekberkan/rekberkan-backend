# Application
APP_NAME="Rekberkan Backend"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=http://localhost:8000
APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

# Ports
APP_PORT=8000
WEBSOCKET_PORT=6001

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=rekberkan
DB_USERNAME=rekberkan
DB_PASSWORD=

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting
BROADCAST_CONNECTION=redis
BROADCAST_DRIVER=redis

# Cache
CACHE_STORE=redis
CACHE_PREFIX=rekberkan_cache

# Filesystem
FILESYSTEM_DISK=local

# Queue
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database-uuids

# Redis
REDIS_CLIENT=predis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2
REDIS_PREFIX=rekberkan:

# Mail
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@rekberkan.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (for S3 if needed)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Octane
OCTANE_SERVER=swoole
OCTANE_HTTPS=false
OCTANE_HOST=0.0.0.0
OCTANE_PORT=8000
OCTANE_WORKERS=auto
OCTANE_TASK_WORKERS=auto
OCTANE_MAX_REQUESTS=500

# Horizon
HORIZON_PREFIX=rekberkan_horizon:
HORIZON_BALANCE=auto
HORIZON_MEMORY_LIMIT=512

# WebSockets
WEBSOCKETS_ENABLE=true
WEBSOCKETS_HOST=0.0.0.0
WEBSOCKETS_PORT=6001
WEBSOCKETS_SCHEME=http

# JWT Authentication
JWT_SECRET=
JWT_TTL=15
JWT_REFRESH_TTL=43200
JWT_ALGO=RS256
JWT_SHOW_BLACK_LIST_EXCEPTION=true

# Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOWED_METHODS="GET,POST,PUT,PATCH,DELETE,OPTIONS"
CORS_ALLOWED_HEADERS="Content-Type,Authorization,X-Requested-With,X-Tenant-Id,X-Idempotency-Key"
CORS_EXPOSED_HEADERS="X-Request-Id,X-RRN,X-STAN"
CORS_MAX_AGE=3600
CORS_SUPPORTS_CREDENTIALS=true

# Telescope
TELESCOPE_ENABLED=true
TELESCOPE_DRIVER=database

# Rate Limiting
RATE_LIMIT_API=60
RATE_LIMIT_AUTH=5
RATE_LIMIT_FINANCIAL=10

# Xendit Payment Gateway
XENDIT_SECRET_KEY=
XENDIT_WEBHOOK_TOKEN=
XENDIT_PUBLIC_KEY=
XENDIT_CALLBACK_TOKEN=
XENDIT_ENV=sandbox

# Platform Configuration
PLATFORM_FEE_PERCENTAGE=5.00
PLATFORM_CURRENCY=IDR
PLATFORM_MIN_ESCROW_AMOUNT=10000
PLATFORM_MAX_ESCROW_AMOUNT=100000000

# Risk Engine
RISK_ENGINE_VERSION=1.0.0
RISK_THRESHOLD_LOW=30
RISK_THRESHOLD_MEDIUM=60
RISK_THRESHOLD_HIGH=80

# SLA Configuration (in hours)
SLA_AUTO_RELEASE_HOURS=72
SLA_AUTO_REFUND_HOURS=168

# Security
SECURITY_WEBHOOK_DRIFT_SECONDS=300
SECURITY_MAX_LOGIN_ATTEMPTS=5
SECURITY_LOCKOUT_MINUTES=15
SECURITY_PASSWORD_MIN_LENGTH=12

# Monitoring & Alerts
ALERT_SLACK_WEBHOOK=
ALERT_EMAIL=ops@rekberkan.com

# Feature Flags
FEATURE_KILL_SWITCH_DEPOSITS=false
FEATURE_KILL_SWITCH_WITHDRAWALS=false
FEATURE_KILL_SWITCH_ESCROW_CREATE=false
FEATURE_KILL_SWITCH_GLOBAL=false
